<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        card_view:cardElevation="6dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rel"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/colorPrimary"
            >

            <TextView
                android:id="@+id/txt_titles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Title"
                android:layout_marginTop="20dp"
                android:textColor="@color/White"
                android:textSize="17sp"
                android:typeface="serif" />

            <ImageView
                android:id="@+id/img_man"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_below="@+id/txt_titles"
               android:layout_marginLeft="10dp"
                android:layout_marginTop="20sp"
                android:src="@drawable/man"/>
            <TextView
                android:id="@+id/txt_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/img_man"
                android:layout_marginLeft="5dp"
                android:text="3.40min"
                android:layout_marginTop="20sp"
                android:layout_below="@+id/txt_titles"
                android:textColor="@color/White"
                android:textSize="14sp"
                android:typeface="serif" />
            <TextView
                android:id="@+id/txt_distence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30sp"
                android:text="700m"
                android:layout_marginTop="20sp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:layout_below="@+id/txt_titles"
                android:textColor="@color/White"
                android:textSize="14sp"
                android:typeface="serif" />
        </RelativeLayout>
    <TextView
        android:id="@+id/txt_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address:"
        android:layout_below="@+id/rel"
        android:layout_marginTop="5dp"
        android:textSize="18dp"
        android:textColor="@color/colorPrimary"
        android:typeface="serif"
        android:textStyle="bold"
        android:layout_marginLeft="10sp"
        />
            <TextView
                android:id="@+id/txt_address_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_address"
                android:textSize="14dp"
                android:text="sdfs"
                android:layout_toRightOf="@+id/txt_address"
                android:textColor="@color/colorPrimary"
                android:typeface="serif"
                android:layout_marginLeft="10sp"
                />

            <ImageView
                android:id="@+id/img_map_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/map_icon"
              android:layout_below="@+id/txt_address_value"
                android:layout_margin="15sp"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>